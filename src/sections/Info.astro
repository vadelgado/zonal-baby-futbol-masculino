<section class="flex font-medium text-pretty gap-y-10 my-4 flex-col">
  <a
    href="https://www.facebook.com/oscararmando.futurasestrellas"
    target="_blank"
    rel="nofollow noopener noreferrer"
    class="hover:scale-125 hover:opacity-70 transition mx-auto"
    aria-label="Buscanos En Facebook"
  >
    <svg
      class="facebook text-pretty detect-in-viewport hover:text-blue-600"
      width="78"
      height="91"
      fill="none"
      viewBox="0 0 78 91"
