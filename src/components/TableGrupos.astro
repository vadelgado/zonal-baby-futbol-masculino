  <table class="mt-10 w-full text-center text-black lg:text-lg">
    <tbody>
        <tr class="mb-10 bg-gradient-to-b from-white/20 via-transparent to-transparent p-4">
            <td class="py-3 font-bold">Grupo A</td>
            <td class="py-3 font-bold">Grupo B</td>
            <td class="py-3 font-bold">Grupo C</td>
            <td class="py-3 font-bold">Grupo D</td>
        </tr>
        {[1, 2, 3, 4].map((num) => (
            <tr class="mb-10 bg-gradient-to-b from-white/20 via-transparent to-transparent p-4">
                {['A', 'B', 'C', 'D'].map((letter) => {
                    const pos = ['A', 'B', 'C', 'D'].indexOf(letter) * 4 + num;
                    const team = RES_TEAMS.find((team) => Number(team.resultadoSorteo) === pos);
                    return <td class="text-primary text-sm"><span class="font-semibold text-xs">{num}{letter} </span>{team ? team.name : ''}</td>;
                })}
            </tr>
        ))}
    </tbody>
